{
	"name": "rappasoft/laravel-5-boilerplate",
	"description": "The Laravel Framework Boilerplate Project.",
	"keywords": ["framework", "laravel", "boilerplate"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.1.*",
        "laravelcollective/html": "5.1.*",
        "laravel/socialite" : "~2.0",
        "stripe/stripe-php": "~3.4.0",
        "hieu-le/active": "~2.0",
		"doctrine/dbal": "~2.5",
	    "laracasts/utilities": "~2.1",
		"arcanedev/log-viewer": "~3.5.0",
		"creativeorange/gravatar": "~1.0",
		"barryvdh/laravel-debugbar": "^2.0"
	},
	"require-dev": {
		"fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "phpspec/phpspec": "~2.1",
        "laracasts/generators": "~1.1",
        "potsky/laravel-localization-helpers" : "~1.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		},
        "files": [
            "app/helpers.php"
        ]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
